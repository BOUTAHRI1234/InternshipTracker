<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="24dp" android:gravity="center">

    <EditText android:id="@+id/etEmail"
        android:hint="Email" android:inputType="textEmailAddress"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etPassword" android:hint="Password" android:inputType="textPassword"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>

    <Button android:id="@+id/btnLogin" android:text="Login"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp"/>
    <TextView android:id="@+id/tvRegister" android:text="No account? Register here"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
</LinearLayout>